#junos-config
groups {
	global {
		system {
     host-name "{{ node.hostname }}";
			services {
				ssh {
					root-login deny-password;
				}
			}
			login {
				user jnpr {
					uid 2000;
					class super-user;
					authentication {
						ssh-rsa "SSHRSAKEY"; ## SECRET-DATA
					}
				}
			}
			syslog {
				user * {
					any emergency;
				}
				file messages {
					any notice;
					authorization info;
				}
				file interactive-commands {
					interactive-commands any;
				}
			}
		}
		interfaces {
			fxp0 {
                		description "interface is {{ interface_description }}";
				unit 0 {
					family  inet {
						address FXP0ADDR;
					}
				}
			}
		}
		routing-options {
			static {
				route 0.0.0.0/0 {
					next-hop GATEWAY;
					retain;
					no-readvertise;
				}
			}
		}
	}
